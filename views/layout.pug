doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        if( subtitle )
            title= title +' '+ subtitle
        else
            title= title 

        if canonical
            link(rel='canonical', href=canonical)
        
        if og
            meta(property="og:url",           content=og.url)
            meta(property="og:type",          content="website")
            meta(property="og:title",         content=og.title)
            meta(property="og:description",   content=og.desc)
            meta(property="og:image",         content=og.img)

        include ./ga_tag.pug


        link(rel='stylesheet', href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.3.1/css/all.css", integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU", crossorigin="anonymous")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/flatly/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/5.1.1/bootstrap-social.css")
        //link(rel="stylesheet", href='/stylesheets/fontawesome/css/all.min.css')

     
    body.container-fluid.bg-light
        .navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-2
            a.navbar-brand.mx-auto(href="/") #{header}
            
        if breadcrumbs
            nav( aria-label="breadcrumb")
                ol.breadcrumb
                    each crumb in breadcrumbs
                        if crumb.active
                            li.breadcrumb-item.active(aria-current="page")
                                a( href=crumb.url ) #{crumb.title}
                        else
                            li.breadcrumb-item
                                a( href=crumb.url ) #{crumb.title}


        if !hide_search && county
            form(action='/voter/wa/' + county.code + '/search').mb-2
                .input-group
                    input.form-control(type='text', placeholder='first name' name='fname')
                    input.form-control(type='text', placeholder='last name' name='lname')
                    .input-group-append
                        button.btn.btn-primary(type='submit') Search

        //.alert.alert-info(role="alert")
            p
                | 11/8/2018 Election Update - Washington State has stopped releasing ballot updates via their portal (as they always do about this time).  
                | So that means that we have our last best guess as to your
                | voter and ballot status processed and live here on Vote Washington.  Going forward into the coming weeks, if you have any questions about
                | your ballot status, we recommend that you confirm your ballot status with your county
                | auditor or on the official Washington State portal "MyVote".  
            p - Thank You L & J
    
        block content


        .card.mt-2.mb-3
            .card-body
                .small.font-italic.text-center
                    |#{header} is a project to assist with the access to public information published by the state of Washington.  #{header} is not
                    |affiliated with any campaign group or political organization. Use of this site for commerical purposes is forbidden.
                    |Use of the public disclosure data on this site for commercial purposes is illegal.
            .card-footer
                .small.font-italic.text-right
                    | #{footer}

        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js", integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js", integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js", integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")